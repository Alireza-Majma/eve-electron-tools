{
  "name": "eve-electron-tools",
  "description": "Open-source, back-end-optional, desktop alternative for popular community tools for EVE Online.",
  "version": "0.0.1",
  "main": "./main.js",
  "scripts": {
    "electron": "ng build --base-href ./ && electron .",
    "electron-build": "ng build --base-href ./ && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "start": "ng serve",
    "build": "ng build"
  },
  "private": true,
  "build": {
    "directories": {
      "output": "build"
    },
    "files": [
      "dist",
      "./main.js",
      "!node_modules"
    ],
    "appId": "eve.electron.tools",
    "win": {
      "target": "NSIS"
    }
  },
  "dependencies": {
    "@angular/animations": "^6.1.9",
    "@angular/common": "^6.1.9",
    "@angular/compiler": "^6.1.9",
    "@angular/core": "^6.1.9",
    "@angular/forms": "^6.1.9",
    "@angular/http": "^6.1.9",
    "@angular/platform-browser": "^6.1.9",
    "@angular/platform-browser-dynamic": "^6.1.9",
    "@angular/router": "^6.1.9",
    "bootstrap": "^4.1.3",
    "core-js": "^2.5.4",
    "jquery": "^3.3.1",
    "ngx-papaparse": "^3.0.0",
    "popper.js": "^1.14.4",
    "rxjs": "^6.3.3",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.8.4",
    "@angular/cli": "^6.2.4",
    "@angular/compiler-cli": "^6.1.9",
    "@angular/language-service": "^6.1.9",
    "@types/node": "~8.9.4",
    "codelyzer": "^4.5.0",
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4",
    "ts-node": "~5.0.1",
    "tslint": "^5.11.0",
    "typescript": "~2.7.2"
  }
}
